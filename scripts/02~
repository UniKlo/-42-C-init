#!/bin/bash

echo "apt-get update -y && \
apt-get upgrade -y >> /var/log/update_script.log" > weeklyupdate.sh
chmod 755 weeklyupdate.sh
sudo mv dailyUpdate.sh /etc/cron.daily
echo "* 4 * * 1 root /etc/cron.daily/dailyUpdate.sh" | crontab
crontab -l

# 1. Entry: Minute when the process will be started [0-59]
# 2. Entry: Hour when the process will be started [0-23]
# 3. Entry: Day of the month when the process will be started [1-28/29/30/31]
# 4. Entry: Month of the year when the process will be started [1-12]
# 5. Entry: Weekday when the process will be started [0-6] [0 is Sunday]